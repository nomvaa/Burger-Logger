<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-2">
      <h3>Burgers ready to eat</h3>

      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
          {{> burgers/burger-block}}
            {{!-- <li class="burger-list">{{this.burger_name}}
              <button type="button" class="btn btn-primary devour-btn" data-id="{{id}}">Devour it!</button>
            </li> --}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-5 offset-md-1">
      <h3>Burgers eaten</h3>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li class="burger-list-eaten">{{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6 offset-md-3 text-center">
      <form>
        <div class="form-group">
          <label id="input-label" for="add-burger-box">Order a burger</label>
          <input type="text" class="form-control" id="submit-burger" placeholder="Enter a burger name">
        </div>
        <button type="submit" id="submit" class="btn btn-primary">Order</button>
      </form>
    </div>
  </div>
</div>